@{
    @model List<tb_cor>;
    ViewData["Title"] = "Home Page";

}

<div >
    <table class="table">
        <tr>
            <th><h2>Cores</h2></th>
            <th></th>
            <th></th>
            <th class="text-sm-right"><button class="btn btn-primary" type="button" onclick="window.location.href ='/cor/cadastrocor'">Nova Categoria</button>
            <th>
        </tr>
    </table>
    @if (Model.Count > 0)
    {
        <table class="table">

            <thead>
                <tr>
                    <th>Código</th>
                    <th>Nome</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.CodigoCor</td>
                        <td>@item.Descricao</td>
                        <td><button type="button" class="btn btn-warning" onclick="window.location.href='/cor/editar?CodigoCor=@item.CodigoCor&Descricao=@item.Descricao'">Editar</button></td>
                        <td><button type="button" class="btn btn-danger" onclick="window.location.href='/cor/excluir?CodigoCor=@item.CodigoCor'">Excluir</button></td>

                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-primary" role="alert">
            Sem Registros!
        </div>
    }

</div>




