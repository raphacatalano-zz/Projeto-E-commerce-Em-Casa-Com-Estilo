
@{
    @model tb_tamanho;
    ViewData["Title"] = "Tamanho";

    Layout = "_Layout_dashboard";
}

<h4>Cadastro de Tamanho</h4>

<form asp-action="Salvar" asp-controller="Tamanho">
    <div class="form-group">
        <label asp-for="Descricao"></label>
        <input type="text" class="form-control" asp-for="Descricao">
        <input type="hidden" asp-for="CodigoTamanho">
    </div>

    @Html.Raw(ViewData["Valida"])

    <button type="submit" class="btn btn-primary">Registrar</button>

</form>

